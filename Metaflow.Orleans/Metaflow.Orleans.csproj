<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <LangVersion>preview</LangVersion>
    <PackageId>Metaflow.Orleans</PackageId>
    <Authors>Metastore Development</Authors>
    <Company>Metastore</Company>
    <PackageDescription>Running Metaflow RESTful entities as Orleans grains with ASP.NET Core API</PackageDescription>
    <RepositoryUrl>https://github.com/mtstr/orleans</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="3.0.1" />
    <PackageReference Include="Microsoft.Extensions.Logging.ApplicationInsights" Version="2.10.0" />
    <PackageReference Include="Microsoft.Orleans.Clustering.AzureStorage" Version="3.2.0-rc1" />
    <PackageReference Include="Microsoft.Orleans.Core" Version="3.2.0-rc1" />
    <PackageReference Include="Microsoft.Orleans.OrleansCodeGenerator.Build" Version="3.2.0-rc1">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Orleans.OrleansTelemetryConsumers.Counters" Version="3.2.0-rc1" />
    <PackageReference Include="Orleans.EventSourcing.Snapshot" Version="1.0.3" />
    <PackageReference Include="OrleansDashboard" Version="3.0.7" />
    <PackageReference Include="Microsoft.Orleans.OrleansProviders" Version="3.2.0-rc1" />
    <PackageReference Include="Microsoft.Orleans.OrleansRuntime" Version="3.2.0-rc1" />
    <PackageReference Include="Microsoft.Orleans.Client" Version="3.2.0-rc1" />
    <PackageReference Include="Microsoft.Orleans.EventSourcing" Version="3.2.0-rc1" />
    <PackageReference Include="Microsoft.Orleans.OrleansTelemetryConsumers.AI" Version="3.2.0-rc1" />
    <PackageReference Include="Microsoft.Orleans.Persistence.AzureStorage" Version="3.2.0-rc1" />
    <PackageReference Include="Microsoft.Orleans.OrleansCodeGenerator" Version="3.2.0-rc1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Metaflow.Core\Metaflow.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Dockerfile">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <CopyToPublishDirectory>Always</CopyToPublishDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
  </ItemGroup>
</Project>
