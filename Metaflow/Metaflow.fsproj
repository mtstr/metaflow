    <PackageReference Include="EventStore.Client.Grpc.ProjectionManagement" Version="20.6.0" />
    <PackageReference Include="EventStore.Client.Grpc.Streams" Version="20.6.0" />
    <PackageReference Include="Microsoft.ApplicationInsights.AspNetCore" Version="2.14.0" />
    <PackageReference Include="Microsoft.Orleans.Core" Version="3.3.0" />
    <PackageReference Include="FSharp.SystemTextJson" Version="0.15.14" />
    <PackageReference Include="Microsoft.Orleans.Runtime.Abstractions" Version="3.3.0" />
    <PackageReference Include="Ply" Version="0.3.1" />
    <ProjectReference Include="..\Metaflow.Core\Metaflow.Core.fsproj" />
  </ItemGroup>

</Project>
