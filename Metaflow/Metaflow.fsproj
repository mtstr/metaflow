<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <PackageId>Metaflow</PackageId>
    <Authors>Metastore Development</Authors>
    <Company>Metastore</Company>
    <PackageDescription>Main Metaflow package with grains</PackageDescription>
    <RepositoryUrl>https://github.com/mtstr/metaflow</RepositoryUrl>
    <AssemblyName>Metaflow</AssemblyName>
    <RootNamespace>Metaflow</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="StateGrain.fs" />
