    <PackageReference Include="EventStore.Client.Grpc.Streams" Version="20.10.0" />
    <PackageReference Include="FSharp.Control.AsyncSeq" Version="3.0.3" />
    <PackageReference Include="FSharp.SystemTextJson" Version="0.15.14" />
    <PackageReference Include="Ply" Version="0.3.1" />
    <PackageReference Include="Serilog" Version="2.10.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Metaflow.Contracts\Metaflow.Contracts.fsproj" />
    <ProjectReference Include="..\Metaflow.Orleans.Grains.Contracts\Metaflow.Orleans.Grains.Contracts.csproj" />
  </ItemGroup>

</Project>
